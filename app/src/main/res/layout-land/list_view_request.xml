<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.5"
    android:id="@+id/list_view_land"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        app:contentPadding="1dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toEndOf="@+id/list_view_land"
        app:layout_constraintStart_toStartOf="@+id/list_view_land"
        app:layout_constraintTop_toTopOf="@+id/list_view_land">

        <TextView
            android:id="@+id/textview_from"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            app:layout_constraintHorizontal_weight="1"
            android:text="@string/hint_from"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textview_to"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="@string/hint_to"
            android:padding="8dp"
            app:layout_constraintHorizontal_weight="1"
            android:textSize="20sp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/textview_date"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="@string/hint_date"
            android:padding="8dp"
            app:layout_constraintHorizontal_weight="1"
            android:textSize="20sp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/textview_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="550dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            app:layout_constraintHorizontal_weight="1"
            android:text="@string/hint_status"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>